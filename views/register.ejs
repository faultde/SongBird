<% include ./partials/header %>

<div class="container">
    

<header class="jumbotron">
    <div class="container text-center">
        <h1>SongBird</h1>
        <p>Personally curated music review and discovery.</p>
    </div>
    
</header>

<div class="login-form">
    <div class="container text-center">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h1 class="panel-title">Sign Up</h1>
                </div>
    		    <div class="panel-body">
                    <div style='width:40%; margin:0 auto;'>
                        <form action="/register" method="POST">
                    
                            <div class="input-group input-group-lg login-userinput">
                              	<span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                              <input type="text" class="form-control" name="username" placeholder="Username" aria-describedby="sizing-addon1">
                            </div>
                            
                            <div class="input-group input-group-lg">
                              <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                              <input type="password" class="form-control" name="password" placeholder="Password" aria-describedby="sizing-addon1">
                            </div>
        
                            <div class='form-group'>
                              <button class="btn btn-lg btn-primary btn-block login-button">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<% include ./partials/footer %>